{
  "name": "@harbour-fi/ramp-snap",
  "version": "0.1.6",
  "description": "Magic Ramp by Harbour",
  "homepage": "https://github.com/harbour-tech/app-web-ramp#readme",
  "bugs": {
    "url": "https://github.com/harbour-tech/app-web-ramp/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/harbour-tech/app-web-ramp.git"
  },
  "license": "(MIT-0 OR Apache-2.0)",
  "author": "",
  "main": "./dist/bundle.js",
  "files": [
    "dist/",
    "images/",
    "snap.manifest.json"
  ],
  "scripts": {
    "allow-scripts": "yarn workspace root allow-scripts",
    "build": "NODE_ENV=production mm-snap build",
    "build:clean": "yarn clean && yarn build",
    "clean": "rimraf dist",
    "lint": "yarn lint:eslint && yarn lint:misc --check",
    "lint:eslint": "eslint . --cache --ext js,ts",
    "lint:fix": "yarn lint:eslint --fix && yarn lint:misc --write",
    "lint:misc": "prettier '**/*.json' '**/*.md' '!CHANGELOG.md' --ignore-path .gitignore",
    "serve": "mm-snap serve",
    "start": "mm-snap watch",
    "test": "npm run build && jest"
  },
  "dependencies": {
    "@metamask/snaps-sdk": "=4.0.1",
    "dotenv": "=16.4.5",
    "ethers": "=6.11.1"
  },
  "devDependencies": {
    "@jest/globals": "=29.7.0",
    "@metamask/auto-changelog": "=3.4.4",
    "@metamask/eslint-config": "=12.2.0",
    "@metamask/eslint-config-jest": "=12.1.0",
    "@metamask/eslint-config-nodejs": "=12.1.0",
    "@metamask/eslint-config-typescript": "=12.1.0",
    "@metamask/snaps-cli": "=6.1.0",
    "@metamask/snaps-jest": "=7.0.1",
    "@types/jest": "=29.5.12",
    "@typescript-eslint/eslint-plugin": "=5.42.1",
    "@typescript-eslint/parser": "=5.42.1",
    "eslint": "=8.45.0",
    "eslint-config-prettier": "=8.5.0",
    "eslint-plugin-import": "~2.26.0",
    "eslint-plugin-jest": "=27.1.5",
    "eslint-plugin-jsdoc": "=41.1.2",
    "eslint-plugin-n": "=15.7.0",
    "eslint-plugin-prettier": "=4.2.1",
    "eslint-plugin-promise": "=6.1.1",
    "jest": "=29.7.0",
    "prettier": "=2.8.8",
    "prettier-plugin-packagejson": "=2.5.0",
    "rimraf": "=5.0.5",
    "through2": "=4.0.2",
    "ts-jest": "=29.1.2",
    "typescript": "=5.1.6",
    "webpack": "=5.91.0"
  },
  "engines": {
    "node": ">=18.6.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
